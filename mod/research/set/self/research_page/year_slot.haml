.year{class: slot_attr}
  - if year_pinned?
    .d-flex.flex-nowrap
      .image-box.small.bg-white.text-muted
        = mapped_icon_tag :year
      %h5.mb-0
        = year
  - else
    .year-select.w-100
      = year_select
  - if existing_answer? && researchable_answer?
    %div
      = nest answer_card, view: :year_edit_link
