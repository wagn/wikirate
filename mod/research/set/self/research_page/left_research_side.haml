- if project?
  = render :project_slot
= render :metric_slot
- if metric?
  = render :company_slot
  - if company?
    = render_year_slot
= render_flash
- if metric?
  .border-bottom.background-grey.p-2.pl-4
    %h5
      Question
      %span.float-right
        = button_tag "View Methodology",
                     class: "_methodology-tab btn btn-sm btn-outline-secondary"
    .large-text
      = nest [metric, :question], view: :core
.p-2.pl-4
  - if answer?
    = answer_slot
  - else
    .alert-warning.p-4
      To research an answer, please select a
      %strong
        = first_missing_field
      above.
