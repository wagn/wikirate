.year{class: slot_attr}
  - if year_pinned?
    .d-flex.flex-nowrap
      .image-box.icon.bg-white
        %span.img-helper
        = fa_icon :calendar, class: "text-muted"
      %h5.mb-0
        = year
  - else
    .year-select
      = year_select
  - if existing_answer? && researchable_answer?
    %div
      = nest answer_card, view: :year_edit_link
