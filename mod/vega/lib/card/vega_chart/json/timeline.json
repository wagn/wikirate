{
  "signals": [
    {
      "name": "interpolate",
      "value": "catmull-rom",
      "bind": {
        "input": "select",
        "options": [
          "basis",
          "cardinal",
          "catmull-rom",
          "linear",
          "monotone",
          "natural",
          "step",
          "step-after",
          "step-before"
        ]
      }
    },
    {
      "name": "yearEnds",
      "init": "data('yearEnds')[0]"
    },    {
      "name": "startYear",
      "init": "yearEnds['min_year'] - 1 "
    },
    {
      "name": "endYear",
      "init": "yearEnds['max_year']"
    },
    {
      "name": "grouptip",
      "value": {
      },
      "on": [
        {
          "events": "area:mouseover",
          "update": "datum"
        },
        {
          "events": "area:mouseout",
          "update": "{}"
        }
      ]
    }
  ],
  "data": [
    {
      "name": "groups",
      "format": { "property": "items" }
    },
    {
      "name": "years"
    },
    {
      "name" : "yearEnds",
      "source": "years",
      "transform": [
        {
          "type": "aggregate",
          "ops":["min", "max"],
          "fields":["year", "year"]}
      ]
    },
    {
      "name": "counts",
      "source": "years",
      "transform" : [
        {
          "type": "impute",
          "groupby": [
            "subgroup"
          ],
          "key": "year",
          "keyvals": {
            "signal": "sequence(startYear, endYear)"
          },
          "field": "count",
          "method": "value",
          "value": 0
        },
        {
          "type": "collect",
          "sort": {
            "field": [
              "year",
              "subgroup"
            ]
          }
        },
        {
          "type": "stack",
          "groupby": [
            "year"
          ],
          "field": "count"
        },
        {
          "type": "lookup",
          "from": "groups",
          "key": "id",
          "fields": ["subgroup"],
          "as": ["group"],
          "values": ["name"]
        },
        {
          "type": "formula",
          "expr": "{ metric_type: datum.group }",
          "as": "filter"
        }
      ]
    },
    {
      "name": "totals",
      "source": "counts",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["year"],
          "fields": ["count"],
          "ops": ["sum"]
        },
        {
          "type": "formula",
          "expr": "{ year: datum.year }",
          "as": "filter"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "counts",
        "field": "year",
        "sort": true
      }
    },
    {
      "name": "yscale",
      "type": "pow",
      "exponent": {
        "signal": "exponent"
      },
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "counts",
        "fields": [
          "y1"
        ]
      }
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "counts",
          "groupby": [
            "group"
          ]
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "year"
              },
              "fill": {
                "scale": "color",
                "field": "group"
              }
            },
            "update": {
              "y": {
                "scale": "yscale",
                "field": "y0"
              },
              "y2": {
                "scale": "yscale",
                "field": "y1"
              },

              "interpolate": {
                "signal": "interpolate"
              },
              "fillOpacity": {
                "value": 1
              }
            },
            "hover": {
              "fillOpacity": {
                "value": 0.9
              }
            }
          }
        }
      ]
    },
    {
      "type": "rect",
      "from": {
        "data": "totals"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "year",
            "offset": 8
          },
          "x2": {
            "scale": "xscale",
            "field": "year",
            "offset": -8
          },
          "fill": {
            "value": "#666"
          },
          "stroke": {
            "value": "#333"
          }
        },
        "update": {
          "y": {
            "scale": "yscale",
            "field": "sum_count"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "strokeWidth": {
            "value": 1
          },
          "interpolate": {
            "signal": "interpolate"
          },
          "opacity": {
            "value": 0
          }
        },
        "hover": {
          "opacity": {
            "value": 0.4
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.year",
            "band": 0.5
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.sum_count",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.sum_count"
          }
        }
      }
    }
  ]
}
