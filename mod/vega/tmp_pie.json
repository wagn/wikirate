{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A basic pie chart example.",
  "width": 700,
  "height": 200,
  "autosize": "none",

  "signals": [
    {
      "name": "startAngle", "value": 0,
      "bind": {"input": "range", "min": 0, "max": 6.29, "step": 0.01}
    },
    {
      "name": "endAngle", "value": 6.29,
      "bind": {"input": "range", "min": 0, "max": 6.29, "step": 0.01}
    },
    {
      "name": "padAngle", "value": 0,
      "bind": {"input": "range", "min": 0, "max": 0.1}
    },
    {
      "name": "innerRadius", "value": 0,
      "bind": {"input": "range", "min": 0, "max": 90, "step": 1}
    },
    {
      "name": "cornerRadius", "value": 0,
      "bind": {"input": "range", "min": 0, "max": 10, "step": 0.5}
    },
    {
      "name": "sort", "value": false,
      "bind": {"input": "checkbox"}
    },
    {
      "name": "tooltip",
      "value": {
      },
      "on": [
        {
          "events": "arc:mouseover",
          "update": "datum"
        },
        {
          "events": "arc:mouseout",
          "update": "{}"
        }
      ]
    }
  ],

  "data": [
    {
      "name": "metricTypes",
      "url": "http://localhost:3000/Metric_Type+*type.json",
      "format": {
        "property": "items"
      }
    },
    {
      "name": "counts",
      "url": "http://localhost:3000/Answer+browse_answer_filter.json?view=year_list&year=1977",
      "transform": [
        {
          "type":"aggregate",
          "groupby": ["metric_type_id"]
        },
        {
          "type": "lookup",
          "from": "metricTypes",
          "key": "id",
          "fields": [
            "metric_type_id"
          ],
          "as": [
            "metricType"
          ],
          "values": [
            "name"
          ]
        },
        {
          "type": "pie",
          "field": "count",
          "startAngle": {"signal": "startAngle"},
          "endAngle": {"signal": "endAngle"},
          "sort": {"signal": "sort"}
        }

      ]
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "counts", "field": "metricType"},
      "range": {"scheme": "rainbow"}
    }
  ],

  "marks": [
    {
      "type": "arc",
      "from": {"data": "counts"},
      "encode": {
        "enter": {
          "fill": {"scale": "color", "field": "metricType"},
          "x": {"signal": "100" },
          "y": {"signal": "100" },
          "tooltip": {"field": "count" }
        },
        "update": {
          "startAngle": {"field": "startAngle"},
          "endAngle": {"field": "endAngle"},
          "padAngle": {"signal": "padAngle"},
          "innerRadius": {"signal": "innerRadius"},
          "outerRadius": {"signal": "100"},
          "cornerRadius": {"signal": "cornerRadius"}
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "type": "symbol",
      "orient": "top-right",
      "encode": {
        "labels": {
          "update": {
            "fontWeight": [
              { "test": "tooltip.metricType == datum.label", "value": 900 },
              { "value": 400 }
            ]
          }
        },
        "symbols": {
          "update": {
            "fillOpacity": [
              { "test": "tooltip.metricType == datum.label", "value": 0.9 },
              { "value": 1 }
            ]
          }
        }
      }
    }
  ]
}
