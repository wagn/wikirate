{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A basic line chart example.",
  "width": 500,
  "height": 200,
  "padding": 5,

  "signals": [
    {
      "name": "interpolate",
      "value": "monotone",
      "bind": {
        "input": "select",
        "options": [
          "basis",
          "cardinal",
          "catmull-rom",
          "linear",
          "monotone",
          "natural",
          "step",
          "step-after",
          "step-before"
        ]
      }
    },
    {
      "name": "yearEnds",
      "init": "data('yearEnds')[0]"
    },    {
      "name": "startYear",
      "init": "yearEnds['min_year']"
    },
    {
      "name": "endYear",
      "init": "yearEnds['max_year']"
    }

  ],

  "data": [
    {
      "name": "answers",
      "url": "https://staging.wikirate.org/Answer+browse_answer_filter/answer_list.json?a=b&limit=100"
    },
    {
      "name": "existingCounts",
      "source": "answers",

      "transform": [
        { "type": "aggregate", "ops": ["distinct", "distinct","count"], "fields": ["company", "metric", "id"], "groupby": ["year"], "as": ["companies", "metrics", "answers"] }
      ]
    },
    { "name" : "yearEnds",
      "source": "existingCounts",
      "transform": [
        { "type": "aggregate", "ops":["min", "max"], "fields":["year", "year"]}
      ]
    },
    {
      "name": "counts",
      "transform": [
        {
          "type": "sequence",
          "start": {"signal": "startYear - 1"},
          "stop": {"signal": "endYear + 1"},
          "as": "year" },
        {"type": "lookup", "from": "existingCounts", "key": "year", "fields": ["year"], "values":["companies", "metrics", "answers"]}

      ]
    }
  ],

  "scales": [
    {
      "name": "xpoint",
      "type": "point",
      "range": "width",
      "domain": {"data": "counts", "field": "year", "sort": true}
    },

    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {"data": "counts", "fields": ["companies", "metrics", "answers"] }
    }
  ],

  "axes": [
    {"orient": "bottom", "scale": "xpoint", "offset": 10},
    {"orient": "left", "scale": "y", "tickMinStep": 1}
  ],

  "marks": [
    {
      "type": "area",
      "from": {"data": "counts"},
      "encode": {
        "enter": {
          "x": {"scale": "xpoint", "field": "year"},
          "y": {"scale": "y", "field": "answers"},
          "y2": {"scale": "y", "value": 0},
          "fill": {"value": "#4966A4"}
        },
        "update": {
          "interpolate": {"signal": "interpolate"},
          "fillOpacity": {"value": 1}
        }
      }
    },
    {
      "type": "rect",
      "from": {"data": "counts"},
      "encode": {
        "enter": {
          "x": {"scale": "xpoint", "field": "year", "offset": 20},
          "x2": {"scale": "xpoint", "field": "year", "offset": -20},

          "y": {"scale": "y", "field": "answers"},
          "y2": {"scale": "y", "value": 0},
          "fill": {"value": "#4966A4"},
          "stroke": { "value": "#fff"},
          "strokeWidth": { "value": 2 }

        },
        "update": {
          "interpolate": {"signal": "interpolate"},
          "opacity": {"value": 0}
        },
        "hover": {
          "opacity": { "value": 1 }
        }
      }
    }
  ]
}
