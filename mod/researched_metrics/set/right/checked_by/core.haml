.checked-by-core
  %h5.mb-0
    Checks
    %span.badge.badge-light.border
      = checker_count
  - if checked?
    .padding-top-10
      %i
        = checkers_list
        %span checked this value
  - else
    .mt-1 Nobody has checked this value since it was #{verb}.
  -if check_requested?
    %p Double check #{verification_flag_for 0} requested by #{check_requester}
  = render_check_interaction
