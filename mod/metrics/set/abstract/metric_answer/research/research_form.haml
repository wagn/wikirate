%div.nodblclick
  = answer_form_hidden_tags
  .editor
    .year
      = hidden_field_tag "card[subcards][+Year][content]", "[[#{card.year}]]"
    - if card.metric_card.relationship?
      .related-company
        = field_nest :related_company, title: "Related Company"
    .value
      -# must nest as value_card (not symbol) to get the correct value cardtype.
      = nest card.value_card, title: "Answer"
      = haml_partial :citations_formgroup
      - if card.steward? && !card.metric_card.unpublished
        = field_nest :unpublished
      = field_nest :discussion,
                   title: "#{fa_icon :comments, class: 'text-muted'} Comment".html_safe

  .buttons
    = button_formgroup do
      - submit_button disable_with: "Adding..."
    .card-notice
